#set($method = $context.getMethod())
#if($method == "DELETE")
{
  "response":
      {
        "status":"ok",
        "id":"$id",
        "deleted":"$!deleted"
      }
}
#elseif($method == "PUT")## for updating assets
{
  "response":
      {
        "status":"ok",
        "id":"$asset.id"
      }
  ,
  "data":#json($asset $searcher.getPropertyDetails())
}  
#elseif($method == "POST")## for creating assets
{
  "response":
      {
        "status":"ok",
        "id":"$asset.id"
      }
  ,
  "data":#json($asset $searcher.getPropertyDetails())
}
#elseif($method == "GET")
{
  "response":
      {
        "status":"ok",
        "id":"$asset.id"
      }
  ,
  
  "data":#json($asset $searcher.getPropertyDetails())
}
#else
  {
    "status":"error",
  	"error":"Invalid request"
  }
#end