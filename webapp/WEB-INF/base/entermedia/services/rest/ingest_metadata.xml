<?xml version="1.0" encoding="utf-8" ?>

#set($searcher = $searcherManager.getSearcher($catalogid, "assettype"))
<rsp stat="ok">
	<assets>
		#foreach($item in $searcher.fieldSearch("id","*","textUp"))
		<asset id="$item.id" name="$item">
			#set( $mediaarchive = $entermedia.getMediaArchive($catalogid) )
			#set($searcher = $mediaarchive.getAssetSearcher())
			#set($details = $searcher.getDetailsForView("asset/assettype/$item.id/upload", $user))
			
			<attributes>
			#foreach( $element in $details)
				<attribute>$!element.text</attribute>
				<attribute>#if("$!element.type" == "")text#else$!element.type#end</attribute>
			#end
			</attributes>
		</asset>
		#end
	</assets>
</rsp>




