
<properties >

  <property id="name" index="true" stored="true" editable="true" >Theme Name</property>
  <!--  header information and style -->
  <property id="title" index="true" stored="true" editable="true">Site Title</property>
  <property id="logopath" index="true" stored="true" editable="true" note="Relative path to image" >Logo</property>
  <property id="logoasset" index="true" stored="true" editable="true" type="list" viewtype="asset" searchtype="portfolio"  internalfield="false" listid="asset" datatype="list" note="Optional">Logo Asset Override</property>
  <property id="logowidth" index="true" stored="true" editable="true" >Logo Width</property>
  <property id="logoheight" index="true" stored="true" editable="true" >Logo Height</property>
 
   <!-- global styles -->
  <property id="backgroundpath" index="true" stored="true" editable="true" note="Overrides colors" >Background Image Path</property>
  <property id="tileupload" index="true" stored="true" editable="true" type="list" viewtype="asset"  sourcepath="users/${userid}/backgroundtile" internalfield="false" listid="asset" datatype="list" tooltip="This acts as a background for the whole site" note="Optional">Background Asset Override</property>
  <property id="backgroundtile" index="true" stored="true" type="boolean" editable="true" >Tile Background</property>
  
  <property id="backgroundstyle" index="true" stored="true" editable="true" type="list" viewtype="list" searchtype="portfolio" datatype="list">Background Style</property>
  <property id="contentbackgroundcolor" index="true" stored="true" editable="true" viewtype="color" >Content Background Color</property>
 
  
  <!-- header color + gradients (new) -->
  <property id="headercolor" index="true" stored="true" editable="true" viewtype="color" >Header Solid Color</property>
  <property id="headercolorgradienthi" index="true" stored="true" editable="true" viewtype="color" >Header Vertical Gradient Color (High)</property>
  <property id="headercolorgradientlo" index="true" stored="true" editable="true" viewtype="color" >Header Vertical Gradient Color (Low)</property>
  
 
  <!-- navigation color + gradients (new) -->
  <property id="navbackgroundpath" index="true" stored="true" editable="true" note="Overrides Colors">Nav Background Path</property>
  <property id="navcolor" index="true" stored="true" editable="true" viewtype="color" >Navigation Color</property>
  <property id="navcolorgradienthi" index="true" stored="true" editable="true" viewtype="color" >Navigation Vertical Gradient Color (High)</property>
  <property id="navcolorgradientlo" index="true" stored="true" editable="true" viewtype="color" >Navigation Vertical Gradient Color (Low)</property>
  
  <property id="navbuttoncolor" index="true" stored="true" editable="true" viewtype="color" >Navigation Button Color</property>
  <property id="navbuttonbordercolor" index="true" stored="true" editable="true" viewtype="color" >Navigation Button Border</property>
