  <property id="navbuttongradientcolor1" index="true" stored="true" editable="true" viewtype="color" >Navigation Vertical Gradient Button Color (High)</property>
  <property id="navbuttongradientcolor2" index="true" stored="true" editable="true" viewtype="color" >Navigation Vertical Gradient Button (Low)</property>
  -->
  <property id="navbuttoncolorgradienthi" index="true" stored="true" editable="true" viewtype="color" >Navigation Vertical Gradient Button Color (High)</property>
  <property id="navbuttoncolorgradientlo" index="true" stored="true" editable="true" viewtype="color" >Navigation Vertical Gradient Button (Low)</property>
  
  <!-- navigation font hover (new)-->
 
  <property id="navhoverfontcolor" index="true" stored="true" editable="true" viewtype="color" >Navigation Hover Font Color</property>
<!-- 
  <property id="navhoverfontopacity" index="true" stored="true" editable="true" viewtype="slider" min="0" max="1" >Navigation Hover Font Opacity</property>
   -->
  <!-- end navigation font hover -->
  <property id="navbuttonhovercolor" index="true" stored="true" editable="true" viewtype="color" >Navigation Hover Solid Button Color</property>
  <!-- 
  <property id="navbuttonhovercolor1" index="true" stored="true" editable="true" viewtype="color" >Navigation Hover Vertical Gradient Button Color (High)</property>
  <property id="navbuttonhovercolor2" index="true" stored="true" editable="true" viewtype="color" >Navigation Hover Vertical Gradient Button Color (Low)</property>
  -->
  <property id="navbuttonhovercolorgradienthi" index="true" stored="true" editable="true" viewtype="color" >Navigation Hover Vertical Gradient Button Color (High)</property>
  <property id="navbuttonhovercolorgradientlo" index="true" stored="true" editable="true" viewtype="color" >Navigation Hover Vertical Gradient Button Color (Low)</property>
  
  <!-- left column -->
  <property id="leftcolumnbackgroundcolor" index="true" stored="true" editable="true" viewtype="color" >Left Column Background Color</property>
  
  <!-- navigation links -->
  <property id="navlinksbackgroundcolor" index="true" stored="true" editable="true" viewtype="color" >Navigation Links Background Color</property>
  
  <!-- table header -->
  <property id="tableheadercolor" index="true" stored="true" editable="true" viewtype="color" >Table Header Solid Color</property>
  <property id="tableheadercolorgradienthi" index="true" stored="true" editable="true" viewtype="color" >Table Header Vertical Gradient Color (High)</property>
  <property id="tableheadercolorgradientlo" index="true" stored="true" editable="true" viewtype="color" >Table Header Vertical Gradient Color (Low)</property>
  
  <!-- asset details selected tab -->
  <property id="assetdetailsselectedtabcolor" index="true" stored="true" editable="true" viewtype="color" >Asset Details Selected Tab Solid Color</property>
  <property id="assetdetailsselectedtabgradientcolorhi" index="true" stored="true" editable="true" viewtype="color" >Asset Details Selected Tab Horizontal Gradient Color (Left)</property>
  <property id="assetdetailsselectedtabgradientcolorlo" index="true" stored="true" editable="true" viewtype="color" >Asset Details Selected Tab Horizontal Gradient Color (Right)</property>
  
  <!-- settings menu selection -->
  <property id="settingsmenuselectioncolor" index="true" stored="true" editable="true" viewtype="color" >Settings Menu Selection Color</property>
  
  <property id="disableshadows" index="true" stored="true" editable="true" sortable="true" type="boolean"  datatype="boolean">Disable Shadows Around Header and Content</property>
  
